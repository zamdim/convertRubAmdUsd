.root {
  padding 24px
  display flex
  flex-direction column
  gap 24px
  max-width 720px
  margin 0 auto

  @media (max-width 450px) {
    padding 24px 16px
  }

  @media (max-width 399px) {
    .title {
      font-size 26px
    }
  }

  .currency {
    display grid
    grid-template-columns max-content 1fr
    gap 10px 40px

    div {
      @media (max-width 399px) {
        font-size 19px
      }
    }
  }
}